@font-face {
    font-family: 'nathaniel';
    src: url('<%= asset_path("nathaniel-webfont.eot") %> ');
    src: url('<%= asset_path("nathaniel-webfont.eot?#iefix") %> ') format('embedded-opentype'),
    	url('<%= asset_path("nathaniel-webfont.woff2") %> ') format('woff2'),
         url('<%= asset_path("nathaniel-webfont.woff") %> ') format('woff'),
         url('<%= asset_path("nathaniel-webfont.ttf") %> ') format('truetype'),
         url('<%= asset_path("nathaniel-webfont.svg#jellyka_-_nathaniel_a_mysteRg") %> ') format('svg');
