body{
  margin: 0;
  padding: 0;
}

#bdycontainer{
  width: 1000px;
  margin-left: auto;
  margin-right: auto;
}

canvas{
  border-style: solid;
  border-width: 1px;
  border-color: #aaa;
  margin-top: 5px;
}

nav{
  background-color: #777;
  margin: 0;
  overflow: hidden;
}

nav li{
  font-family: 'sanchez_regular';
  font-weight: bold;
  display: inline;
  color: #111;
  background-color: #999;
  line-height: 1.5em;
  padding: 0.5em 0.5em;
}

nav li a{
  font-weight: normal;
  text-decoration: none;
}

nav li:hover{
  background-color: #777;
}
